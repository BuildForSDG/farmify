{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "overrides": [
        {
            // 2. Enable the Markdown processor for all .md files.
            "files": ["**/*.md"],
            "processor": "markdown/markdown"
        }
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "prettier",
        "markdown"
    ],
    "rules": {
        "func-names":"off",
        "no-unused-vars":"off",
        "no-undef":"off"
    }
}